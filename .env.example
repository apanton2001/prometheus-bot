# Application
DEBUG=false
ENVIRONMENT=production

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Prometheus Bot
VERSION=1.0.0
DESCRIPTION="Automated trading, content generation, and service delivery system"

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_HASH_ALGORITHM=bcrypt

# CORS
CORS_ORIGINS=["*"]
CORS_HEADERS=["*"]

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prometheus
SQL_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# Trading
TRADING_ENABLED=true
MAX_POSITIONS=10
DEFAULT_LEVERAGE=1.0
RISK_PERCENTAGE=1.0
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=4.0

# Content Generation
CONTENT_GENERATION_ENABLED=true
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=prometheus.log

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=your-sentry-dsn-here

# Cache
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Email
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@prometheus-bot.com

# Webhook
WEBHOOK_ENABLED=false
WEBHOOK_SECRET=your-webhook-secret-here
WEBHOOK_TIMEOUT=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=prometheus_bot
DB_USER=prometheus_user
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=3600

# Trading Configuration
TRADING_MODE=paper  # paper or live
TRADING_PAIRS=BTC/USDT,ETH/USDT

# Content Generation
CONTENT_GENERATION_MODEL=gpt-4
TEMPERATURE=0.7

# Service Configuration
STRIPE_API_KEY=your_stripe_api_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
EMAIL_SERVICE_API_KEY=your_email_service_key

# Monitoring
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password
EXCHANGE_API_KEY=your-exchange-api-key
EXCHANGE_API_SECRET=your-exchange-api-secret

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# Application settings
SECRET_KEY=your_secret_key_here_make_it_very_long_and_random

# Service settings
CONTENT_GENERATION_INTERVAL=3600  # in seconds
TRADING_CHECK_INTERVAL=300  # in seconds
SERVICE_CHECK_INTERVAL=300  # in seconds

# Exchange API Keys
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret

KUCOIN_API_KEY=your-kucoin-api-key
KUCOIN_API_SECRET=your-kucoin-api-secret
KUCOIN_API_PASSPHRASE=your-kucoin-passphrase 